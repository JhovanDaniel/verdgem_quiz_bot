<div class="page page-center">
  <div class="container-fluid container-tight" style="max-width: 800px;">
    <div class="text-center mb-4">
      <!-- BEGIN NAVBAR LOGO -->
      
      
      <!-- END NAVBAR LOGO -->
    </div>
    <div class="card card-md p-3">
      <div class="card-body p-3">
        <h4 class="h4 text-center mb-3">Sign up</h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <%= f.input :email, 
                      wrapper_html: { class: 'my-1' },
                      input_html: { autocomplete: "email", autofocus: true },
                      label_html: { class: 'form-label' } %>
          <div class="row g-2">
            <div class="col-12 col-md-6">
              <%= f.input :first_name, 
                      wrapper_html: { class: 'my-1' },
                      label_html: { class: 'form-label' } %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.input :last_name, 
                      wrapper_html: { class: 'my-1' },
                      label_html: { class: 'form-label' } %>
            </div>
          </div>
                      
          <%= f.input :nickname, label: 'Display Name',
                      wrapper_html: { class: 'my-1' },
                      label_html: { class: 'form-label' } %>
          
          <%= f.input :country, 
                      wrapper_html: { class: 'my-1' },
                      label_html: { class: 'form-label' } %>
                      
          <div class="row g-2">
            <div class="col-12 col-md-6">
              <%= f.input :password,
                      wrapper_html: { class: 'my-1' },
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: 'form-label' },
                      hint: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.input :password_confirmation,
                      wrapper_html: { class: 'my-1' },
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: 'form-label' } %>
            </div>
          </div>
        
          <div class="actions mt-4">
            <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
    
      </div>
    </div>
    <div class="text-center">
      <%= link_to "Already have an account? Sign in", new_user_session_path, class:"text-secondary mt-3" %>
    </div>
    
    <div class="text-center">
      <%= link_to "Forgot password", new_password_path(resource_name), class:"text-secondary mt-3" %>
    </div>
  </div>
</div>