<div class="page page-center">
  <div class="container container-tight py-4" style="width:500px;">
    <div class="text-center mb-4">
      <!-- BEGIN NAVBAR LOGO -->
      
      
      <!-- END NAVBAR LOGO -->
    </div>
    <div class="card card-md p-4">
      <div class="card-body p-4">
        <h4 class="h4 text-center mb-4">Sign up</h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <%= f.input :email, 
                      wrapper_html: { class: 'my-4' },
                      input_html: { autocomplete: "email", autofocus: true },
                      label_html: { class: 'form-label' } %>
          
          <%= f.input :first_name, 
                      wrapper_html: { class: 'my-4' },
                      label_html: { class: 'form-label' } %>
          
          <%= f.input :last_name, 
                      wrapper_html: { class: 'my-4' },
                      label_html: { class: 'form-label' } %>
                      
                      <%= f.input :nickname, 
                      wrapper_html: { class: 'my-4' },
                      label_html: { class: 'form-label' } %>
          
          <%= f.input :country, 
                      wrapper_html: { class: 'my-4' },
                      label_html: { class: 'form-label' } %>
          
          <%= f.input :password,
                      wrapper_html: { class: 'my-4' },
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: 'form-label' },
                      hint: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil %>
          
          <%= f.input :password_confirmation,
                      wrapper_html: { class: 'my-4' },
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: 'form-label' } %>
          
          <div class="actions mt-4">
            <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
    
      </div>
    </div>
    <div class="text-center">
      <%= link_to "Already have an account? Sign in", new_user_session_path, class:"text-secondary mt-3" %>
    </div>
    
    <div class="text-center">
      <%= link_to "Forgot password", new_password_path(resource_name), class:"text-secondary mt-3" %>
    </div>
  </div>
</div>
