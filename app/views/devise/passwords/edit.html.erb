<div class="page page-center">
  <div class="container container-tight py-4" style="width:500px;">
    <div class="text-center mb-4">
      <!-- BEGIN NAVBAR LOGO -->
      
      
      <!-- END NAVBAR LOGO -->
    </div>
    <div class="card card-md p-4">
      <div class="card-body p-4">
        <h4 class="h4 text-center mb-4">Change your password</h4>
        
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          
          <%= f.input :password, 
                      label: "New password",
                      required: true,
                      autofocus: true,
                      wrapper_html: { class: 'my-4' },
                      input_html: { class: "form-control", autocomplete: "new-password" },
                      hint: (@minimum_password_length ? "#{@minimum_password_length} characters minimum" : "") %>
          
          <%= f.input :password_confirmation, 
                      label: "Confirm new password",
                      required: true,
                      wrapper_html: { class: 'my-4' },
                      input_html: { class: "form-control", autocomplete: "new-password" } %>
          
          <div class="actions mt-4">
            <%= f.button :submit, "Change my password", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-4">
      <%= link_to "Sign up", new_registration_path(resource_name), class:"text-secondary mt-3" %> | <%= link_to "Login", new_user_session_path, class:"text-secondary mt-3" %>
    </div>
  </div>
</div>