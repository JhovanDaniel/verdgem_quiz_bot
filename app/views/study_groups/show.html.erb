<div class="container py-4">
  <!-- Hero Section -->
  <div class="institution-hero-section p-4 p-md-5">
      <div class="row align-items-center">
          <div class="col-md-8">
              <div class="d-flex align-items-center mb-3">
                  <%= image_tag @study_group.group_icon, 
                    alt: @study_group.name, width: 200, height: 200,
                    class: "institution-logo p-2 mx-2" if @study_group.group_icon.attached? %>
                  <div>
                      <h1 class="display-6 fw-bold mb-2"><%= @study_group.name %></h1>
                  </div>
              </div>
              <p class="lead mb-0 opacity-90">
                  <%= @study_group.description %>
              </p>
              <small class="text-white">Text </small>
          </div>
          <% if current_user.admin? %>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
              <%= link_to edit_study_group(@study_group), class:"btn btn-outline-primary bg-white" do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>
            </div>
          <% end %>
      </div>
  </div>

  <!-- Stats Section -->
  <div class="row mb-4">
      <div class="col-md-3 col-6 mb-3">
          <div class="stats-card text-center">
              <div class="display-6 fw-bold"><%= @study_group.members.where(role: :student).count %></div>
              <div class="text-muted fw-medium">Total Members</div>
          </div>
      </div>
      <div class="col-md-3 col-6 mb-3">
          <div class="stats-card text-center">
              <div class="display-6 fw-bold"><%= @study_group.study_group_memberships.sum(:quizzes_completed_in_group) %></div>
              <div class="text-muted fw-medium">Quizzes Completed</div>
          </div>
      </div>
      <div class="col-md-3 col-6 mb-3">
          <div class="stats-card text-center">
              <div class="display-6 fw-bold"><%= @study_group.monthly_points %></div>
              <div class="text-muted fw-medium">Points This Month</div>
          </div>
      </div>
      <div class="col-md-3 col-6 mb-3">
          <div class="stats-card text-center">
              <div class="display-6 fw-bold"><%= @study_group.total_points %></div>
              <div class="text-muted fw-medium">Total Points</div>
          </div>
      </div>
  </div>

  <!-- Main Content -->
  <div class="row">
      <!-- Left Column -->
      <div class="col-lg-8 mb-4">
          <!-- Students Section -->
          <div class="info-card mb-4">
              <h5><i class="bi bi-people-fill"></i>Members</h5>
              <div class="d-flex flex-wrap gap-3 mb-3">
                <% @study_group.members.where(role: :student).each do |student| %>
                  <%= link_to user_path(student) do %>
                    <div class="text-center mx-auto text-white">
                      <div class="avatar-circle mx-auto" style="background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);">
                          <%= student.initials %>
                      </div>
                      <small class="d-block mt-2 text-black"><%= student.name %></small>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="bi bi-clock me-1"></i> Last activity: 
                    <% if @last_quiz_activity&.completed_at %>
                      <%= time_ago_in_words(@last_quiz_activity.completed_at) %> ago
                    <% else %>
                      No quiz activity yet
                    <% end %>
                  </small>
              </div>
          </div>

          <!-- Activity Feed -->
          <div class="info-card">
            <h5><i class="bi bi-activity"></i>Recent Activity</h5>
            <%# @recent_quiz_sessions.each do |activity| %>
              <div class="activity-item d-flex align-items-start mb-3">
                <div class="avatar-circle text-white me-3" style="width: 40px; height: 40px; background: linear-gradient(135deg, #22c55e 0%, #15803d 100%); font-size: 0.8rem;">
                    JD
                </div>
                <div class="flex-grow-1">
                    <div class="fw-medium">Jane Doe completed Quiz: Maths</div>
                    <small class="text-muted">2 weeks ago</small>
                </div>
            </div>
            <%# end %>
          </div>
          
          <!-- Invite friends -->
          <% if current_user.study_group_admin?(@study_group) %>
  <div class="info-card">
    <h5><i class="bi bi-person-plus me-2"></i>Invite Followers</h5>
    
    <% if current_user.followers.any? %>
      <% current_user.followers.limit(5).each do |follower| %>
        <div class="activity-item d-flex align-items-center mb-3">
          <div class="avatar-circle text-white me-3" 
               style="width: 40px; height: 40px; background: linear-gradient(135deg, <%= ['#22c55e', '#3b82f6', '#8b5cf6', '#f59e0b', '#ef4444'].sample %> 0%, <%= ['#15803d', '#1d4ed8', '#7c3aed', '#d97706', '#dc2626'].sample %> 100%); font-size: 0.8rem;">
            <%= follower.initials %>
          </div>
          <div class="flex-grow-1">
            <div class="fw-medium"><%= follower.name %></div>
            <small class="text-muted">@<%= follower.nickname %></small>
          </div>
          <div class="ms-auto">
            <% if @study_group.member?(follower) %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle me-1"></i>Member
              </span>
            <% elsif @study_group.pending_invitation?(follower) %>
              <span class="badge bg-warning">
                <i class="bi bi-clock me-1"></i>Invited
              </span>
            <% else %>
              <%= link_to invite_user_study_group_path(@study_group, invitee: follower.id),
                  class: "btn btn-xs btn-primary" do %>
                <i class="bi bi-plus-circle me-1"></i>Invite
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <% if current_user.followers.count > 5 %>
        <div class="text-center mt-3">
          <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#inviteModal">
            <i class="bi bi-search me-1"></i>
            View All Followers (<%= current_user.followers.count %>)
          </button>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-3">
        <i class="bi bi-person-plus text-muted" style="font-size: 2rem;"></i>
        <p class="text-muted small mb-0 mt-2">No followers to invite</p>
        <small class="text-muted">Get more followers to expand your clan!</small>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Modal for viewing all followers (optional) -->
<div class="modal fade" id="inviteModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-person-plus me-2"></i>
          Invite Followers to <%= @study_group.name %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <% current_user.followers.each do |follower| %>
            <div class="col-md-6 mb-3">
              <div class="d-flex align-items-center p-2 border rounded">
                <div class="avatar-circle text-white me-3" 
                     style="width: 35px; height: 35px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); font-size: 0.75rem;">
                  <%= follower.initials %>
                </div>
                <div class="flex-grow-1">
                  <div class="fw-medium small"><%= follower.name %></div>
                  <small class="text-muted">@<%= follower.nickname %></small>
                </div>
                <div class="ms-auto">
                  <% if @study_group.member?(follower) %>
                    <span class="badge bg-success small">Member</span>
                  <% elsif @study_group.pending_invitation?(follower) %>
                    <span class="badge bg-warning small">Invited</span>
                  <% else %>
                    <%= link_to invite_user_study_group_path(@study_group, invitee: follower.id),
                        class: "btn btn-xs btn-primary" do %>
                      <i class="bi bi-plus"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
      </div>

      <!-- Right Column -->
      <div class="col-lg-4">

        <!-- Quick Actions -->
        <% if current_user.admin? or current_user.study_group_admin?(@study_group) %>
          <div class="info-card">
            <h5>Quick Actions</h5>
            <div class="d-grid gap-2">
              <%= link_to edit_study_group_path(@study_group) do %>
              <button class="btn btn-outline-primary">
                  <i class="bi bi-pencil me-2"></i>Edit Study Group
              </button>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
  </div>

  <div class="section-divider"></div>

  <!-- Navigation -->
  <div class="d-flex justify-content-between align-items-center">
    <% if current_user.admin? %>
      <%= link_to "Back to institutions", institutions_path,  class:"btn btn-outline-primary"%>
    <% else %>
      <%= link_to "Back to home", authenticated_root_path, class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>

