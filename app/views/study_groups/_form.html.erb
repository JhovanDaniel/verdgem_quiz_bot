<%= simple_form_for(@study_group) do |f| %>
  <% f.object.errors[:base].each do |error| %>
    <%= f.error_notification message: error %>
  <% end %>
  
  <div class="form-inputs" data-controller="direct-upload">
    <%= f.input :name, 
                label: 'Study Group Name',
                placeholder: 'Enter name of the study group',
                required: true %>
                
    <%= f.input :description, 
                label: 'Description (optional)',
                as: :text, 
                input_html: { rows: 8 },
                placeholder: 'Enter the description of the study group' %>
                
    
    <%= f.input :clan_motto, 
                label: 'Group motto (optional)',
                as: :text, 
                input_html: { rows: 2 },
                placeholder: 'Enter a motto for the group' %>
                
    <%= f.input :clan_color, 
            label: 'Study Group Color',
            as: :string,
            hint: "Select your study group color",
            input_html: { 
              type: 'color',
              class: 'form-control form-control-color',
              value: f.object.clan_color || '#3b82f6'
            } %>
    
    <%= f.input :created_by_id, as: :hidden,
                input_html: { value: current_user } %>
                
                
    <div class="row mb-4">
      <div class="col-md-6">
        <div>
          <% if f.object.persisted? && f.object.group_icon.attached? %>
            <%= f.hidden_field :group_icon, value: f.object.group_icon.blob.signed_id %>
            <%= f.hidden_field :remove_group_icon, value: "0" %>
          <% end %>
          
          <%= f.input :group_icon, :as => :file, label: 'Group Icon', placeholder: "Choose a file...",
          input_html: { 
            class: "form-control", 
            direct_upload: true,
            required: true,
            accept: "image/*",
            data: { 
              action: 'change->direct-upload#previewImage direct-upload:end->direct-upload#uploadComplete',
              existing_image: f.object.persisted? && f.object.group_icon.attached? ? url_for(f.object.group_icon) : '',
              existing_filename: f.object.persisted? && f.object.group_icon.attached? ? f.object.group_icon.filename : ''
            }
          }%>
          
          <!-- Preview container -->
          <div id="image-preview-container" class="mt-3" style="display: none;">
            <img id="image-preview" src="" alt="Preview" class="img-thumbnail" style="max-width: 300px; max-height: 200px;">
            <div class="mt-2">
              <button type="button" class="btn btn-sm btn-outline-danger" data-action="click->direct-upload#removeImage">
                <i class="bi bi-trash"></i> Remove Image
              </button>
            </div>
          </div>
          
          <!-- File status -->
          <div id="file-status" class="mt-2">
            <% if f.object.persisted? && f.object.group_icon.attached? %>
              <span class="text-success">Current file: <%= f.object.group_icon.filename %></span>
            <% else %>
              <span class="text-muted">No file chosen</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-actions mt-4">
    <%= f.button :submit, @study_group.new_record? ? "Create Study Group" : "Update Study Group", class: 'btn-primary' %>
    <%= link_to "Cancel", social_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
  
<% end %>