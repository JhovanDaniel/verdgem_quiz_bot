<%= simple_form_for @subject do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :name, required: true, label: 'Subject Name' %>
    
    <%= f.input :description, 
                as: :text, 
                input_html: { rows: 4 } %>
    
    <%= f.input :syllabus_outline, 
                as: :text,
                input_html: { rows: 6 },
                hint: 'Add key points from the CSEC syllabus for this subject' %>
  </div>
  
  <div class="form-actions mt-4">
    <%= f.button :submit, 'Create Subject', class: 'btn-primary' %>
    <%= link_to "Cancel", subjects_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>