<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Subjects", subjects_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @subject.name %> Topics</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="mb-0"><%= @subject.name %> Topics</h3>
      <%= link_to "Add New Topic", new_subject_topic_path(@subject), class: "btn btn-primary" %>
    </div>
    <div class="card-body">
      <% if @subject.description.present? %>
        <p class="mb-4"><%= @subject.description %></p>
      <% end %>
    </div>
  </div>

  <% if @topics.empty? %>
    <div class="alert alert-info">
      No topics have been added to this subject yet. Click "Add New Topic" to create the first topic.
    </div>
  <% else %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @topics.each do |topic| %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= topic.name %></h5>
              
              <% if topic.description.present? %>
                <p class="card-text"><%= truncate(topic.description, length: 120) %></p>
              <% else %>
                <p class="card-text text-muted"><em>No description provided</em></p>
              <% end %>
              
              <div class="mt-auto">
                <span class="badge bg-primary">
                  <%= pluralize(topic.questions.count, 'question') %>
                </span>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <div class="d-flex justify-content-between">
                <%= link_to "View Topic", topic_path(topic), class: "btn btn-outline-primary btn-sm" %>
                <div>
                  <%= link_to "Add Question", new_topic_question_path(topic), class: "btn btn-outline-success btn-sm" %>
                  <%= link_to "Edit", edit_topic_path(topic), class: "btn btn-outline-secondary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-4">
    <% if @topics.any? %>
      <%= link_to "Start Quiz for #{@subject.name}", quiz_start_path(subject_id: @subject.id), class: "btn btn-success" %>
    <% end %>
    <%= link_to "Back to Subjects", subjects_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
</div>