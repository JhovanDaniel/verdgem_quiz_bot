<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Subjects", subjects_path %></li>
          <li class="breadcrumb-item"><%= link_to @subject.name, subject_path(@subject) %></li>
          <li class="breadcrumb-item active" aria-current="page">New Topic</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h3>Add New Topic for <%= @subject.name %></h3>
    </div>
    <div class="card-body">
      <%= render 'topics/form' %>
    </div>
  </div>
</div>