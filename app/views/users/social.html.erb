<div class="container px-4" id="social-dashboard">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="display-6 fw-bold">Social Dashboard</h2>
  </div>
  
  <% if @user.pending_study_group_invitations.any? %>
    <div class="mb-4 alert alert-info alert-dismissible fade show" role="alert" id="pending-invitations-alert">
      <i class="bi bi-envelope-plus-fill me-2"></i>
      <strong>Study Group Invitations!</strong> 
      You have <%= pluralize(@user.pending_study_group_invitations.count, 'pending invitation') %>:
      
      <div class="mt-2">
        <% @user.pending_study_group_invitations.each do |invitation| %>
          <div class="d-flex align-items-center justify-content-between rounded p-2 mb-2">
            <div>
              <span class="fw-medium">Study group <b><%= invitation.study_group.name %></b></span>
              <small class="text-white d-block">
                Invited by <%= invitation.inviter.name %> 
                <%= time_ago_in_words(invitation.created_at) %> ago
              </small>
            </div>
            <div class="btn-group btn-group-sm">
              <%= link_to "Accept", accept_study_group_invitation_path(invitation),
                  class: "btn btn-success btn-sm",
                  data: { turbo_confirm: "Join #{invitation.study_group.name}?" } %>
              <%= link_to "Decline", decline_study_group_invitation_path(invitation),
                  class: "btn btn-danger btn-sm",
                  data: { turbo_confirm: "Decline invitation to #{invitation.study_group.name}?" } %>
            </div>
          </div>
        <% end %>
      </div>
      
      <button type="button" class="btn-close" data-bs-dismiss="alert" id="close-invitations"></button>
    </div>
  <% end %>
  
  <% if @new_followers.any? %>
    <div class="mb-4 alert alert-success alert-dismissible fade show" role="alert" id="new-followers-alert">
      <i class="bi bi-person-plus-fill me-2"></i>
      <strong>New Followers!</strong> 
      <%= pluralize(@new_followers.count, 'person') %> started following you:
      
      <div class="mt-2">
        <% @new_followers.each do |follow| %>
          <span class="badge bg-primary me-1">
            <%= link_to follow.follower.name, profile_path(follow.follower.nickname), 
                class: "text-white text-decoration-none" %>
          </span>
        <% end %>
      </div>
      
      <button type="button" class="btn-close" data-bs-dismiss="alert" id="close-new-followers"></button>
    </div>
    
    <script>
      document.getElementById('close-new-followers').addEventListener('click', function() {
        // Mark as seen when closing
        fetch('<%= mark_new_followers_seen_path %>', {
          method: 'GET',
          headers: {
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
            'Content-Type': 'application/json'
          }
        });
      });
    </script>
  <% end %>
  
  <!-- Followers Card -->
  <div class="card hover-card border-0 shadow-sm mb-5">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-person-hearts me-2"></i>
        Followers
      </h4>
      <div class="btn-group" role="group">
        <%= link_to user_following_path(@user), class: "btn btn-outline-primary btn-sm" do %>
          View Following
        <% end %>
        <%= link_to user_followers_path(@user), class: "btn btn-outline-primary btn-sm" do %>
          View Followers
        <% end %>
        <%= link_to find_users_path, class: "btn btn-sm btn-primary" do %>
          <i class="bi bi-search me-1"></i>Find Users
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-9 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <!-- Following & Followers Avatars Section -->
            <div class="">
              <% if @user.followers.any? %>
                <!-- Followers Avatars -->
                <% if @user.followers.any? %>
                  <div class="mb-3">
                    <div class="d-flex flex-wrap gap-3">
                      <% @user.followers.limit(6).each_with_index do |follower, index| %>
                        <div class="text-center position-relative">
                          <%= link_to profile_path(follower.nickname), class: "text-decoration-none" do %>
                            <div class="avatar-circle bg-success text-white d-flex align-items-center justify-content-center mb-2" 
                                 style="width: 60px; height: 60px; border-radius: 50%; font-size: 0.75rem;">
                              <%= follower.initials %>
                            </div>
                            <small class="text-muted d-block" style="font-size: 0.7rem;">
                              <%= follower.nickname %>
                            </small>
                          <% end %>
                          
                          <!-- Show mutual follow indicator -->
                          <% if current_user&.following?(follower) %>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning" 
                                  style="font-size: 0.5rem; margin-top: 3px; margin-left: -3px;" 
                                  title="Mutual follow">
                              <i class="bi bi-arrow-left-right"></i>
                            </span>
                          <% end %>
                        </div>
                      <% end %>
                      
                      <% if @user.followers_count > 6 %>
                        <%= link_to user_followers_path(@user), class: "text-decoration-none" do %>
                          <div class="text-center">
                            <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center mb-2" 
                                 style="width: 60px; height: 60px; border-radius: 50%; border: 2px dashed #dee2e6; font-size: 0.65rem;">
                              +<%= @user.followers_count - 6 %>
                            </div>
                            <small class="text-muted d-block" style="font-size: 0.7rem;">more</small>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <!-- Empty State -->
                <div class="text-center">
                  <div class="mb-3">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                  </div>
                  <h6 class="text-muted mb-2">No social connections yet</h6>
                  <p class="text-muted small mb-3">Start following other users to build your network!</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong><%= @user.followers_count %></strong> followers | <strong><%= @user.following_count %></strong> following
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Study Group Section -->
  <div class="card hover-card border-0 shadow-sm mb-5">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-people-fill text-primary me-2"></i>
        My Study Group
      </h4>
      <% if @user.is_study_group_member? %>
        <%= link_to "Group Details", study_group_path(@user.current_study_group), class:"btn btn-outline-primary btn-sm" %>
      <% else %>
        <%= link_to new_study_group_path, class: "btn btn-sm btn-primary" do %>
          <i class="bi bi-plus me-1"></i>Create Study Group
        <% end %>
      <% end %>
      
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <h5 class="text-primary mb-2"><%= @user.is_study_group_member? ? @user.current_study_group.name : "No study group yet" %></h5>
          <small class="text-muted"><%= @user.is_study_group_member? ? format_date(@user.current_study_group.created_at) : "You can join a study group or create your own!" %></small>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <% if @user.is_study_group_member? %>
              <% @user.current_study_group.members.limit(5).each do |student| %>
                <%= link_to profile_path(student.nickname) do %>
                  <div class="text-center text-white">
                    <div class="avatar-circle mx-auto" style="background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);">
                        <%= student.initials %>
                    </div>
                    <small class="d-block mt-2 text-black"><%= student.name %></small>
                  </div>
                <% end %>
              <% end %>
              <!-- More indicator -->
              <div class="text-center">
                <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                     style="width: 60px; height: 60px; border-radius: 50%; border: 2px dashed #dee2e6;">
                  <span style="font-size: 0.8rem;">+<%= @user.institution.users.where(role: :student).count - 5 %></span>
                </div>
              </div>
            <% else %>
              <p></p>
            <% end %>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <% if @user.is_study_group_member? %>
              <strong><%= @user.current_study_group.members.count %></strong> members
            <% end %>
          </p>
          <small class="text-muted"><%= @user.is_study_group_member? ? "#{@user.current_study_group.total_points} total points" : "" %></small>
        </div>
      </div>
    </div>
  </div>

  <!-- Institution Section -->
  <% if !current_user.institution.nil? %>
  <div class="card hover-card border-0 shadow-sm mb-5">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-building me-2"></i>
        My Institution
      </h4>
      <%= link_to "View Institution", institution_path(@user.institution), class:"btn btn-outline-primary btn-sm" %>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <div class="d-flex align-items-center mb-3">
            <%= image_tag @user.institution.institution_logo, 
              alt: @user.institution.name,
              class: "institution-logo-thumb  p-2 mx-2" if @user.institution.institution_logo.attached? %>
            <div>
                <h5 class="mb-2"><%= @user.institution.name %></h5>
            </div>
          </div>
          <small class="text-muted">Rank #3 on VerdGem Quiz</small>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <% @user.institution.users.where(role: :student).limit(5).each do |student| %>
              <%= link_to user_path(student) do %>
                <div class="text-center text-white">
                  <div class="avatar-circle mx-auto" style="background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);">
                      <%= student.initials %>
                  </div>
                  <small class="d-block mt-2 text-black"><%= student.name %></small>
                </div>
              <% end %>
            <% end %>
            <!-- More indicator -->
            <div class="text-center">
              <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                   style="width: 60px; height: 60px; border-radius: 50%; border: 2px dashed #dee2e6;">
                <span style="font-size: 0.8rem;">+<%= @user.institution.users.where(role: :student).count - 5 %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong><%= @user.institution.total_students %></strong> total students
          </p>
          <small class="text-muted">Your rank: #<%= Institution.institution_rank_for_student(@user) %></small>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="d-flex flex-column flex-md-row justify-content-between gap-2 gap-md-0 my-4">
    <%= link_to "Back to Dashboard", authenticated_root_path ,class:"btn btn-outline-primary" %>
  </div>
</div>

<style>

.hover-card {
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.hover-card:hover {
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

@media (max-width: 768px) {
  .d-flex.gap-3 {
    justify-content: center;
  }
  
  .d-flex.gap-2 {
    justify-content: center;
  }
}
</style>