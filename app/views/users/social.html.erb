<div class="container px-4" id="social-dashboard">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="display-6 fw-bold">Social Dashboard</h2>
  </div>
  
  <!-- Friends Section -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-person-hearts text-success me-2"></i>
        Friends
      </h4>
      <div>
        <a href="#" class="btn btn-outline-success btn-sm"><i class="bi bi-plus me-1"></i>Add Friend</a>
        <a href="#" class="btn btn-outline-success btn-sm">View All Friends</a>
      </div>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-8">
          <div class="d-flex flex-wrap gap-3">
            <!-- Friend Avatar 1 -->
            <div class="text-center">
              <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
              </div>
              <small class="text-muted">Sarah J.</small>
            </div>
            <!-- Friend Avatar 2 -->
            <div class="text-center">
              <div class="avatar-circle bg-success text-white d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
              </div>
              <small class="text-muted">Mike R.</small>
            </div>
            <!-- Friend Avatar 3 -->
            <div class="text-center">
              <div class="avatar-circle bg-info text-white d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
              </div>
              <small class="text-muted">Alex K.</small>
            </div>
            <!-- Friend Avatar 4 -->
            <div class="text-center">
              <div class="avatar-circle bg-warning text-white d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
              </div>
              <small class="text-muted">Emma L.</small>
            </div>
            <!-- Friend Avatar 5 -->
            <div class="text-center">
              <div class="avatar-circle bg-danger text-white d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
              </div>
              <small class="text-muted">David S.</small>
            </div>
            <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                   style="width: 60px; height: 60px; border-radius: 50%; border: 2px dashed #dee2e6;">
                <span style="font-size: 0.8rem;">+247</span>
              </div>
          </div>
        </div>
        <div class="col-12 col-md-4 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong>24</strong> total friends
          </p>
          <small class="text-muted">Last active: 2 hours ago</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Achievements Section -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-trophy-fill text-warning me-2"></i>
        Recent Achievements
      </h4>
      <a href="#" class="btn btn-outline-warning btn-sm">View All Badges</a>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-11 col-md-9">
          <div class="d-flex flex-wrap gap-3">
            <% @user.user_badges.order(created_at: :desc).limit(5).each do |user_badge|%>
              <div class="badge-container">
                <%= image_tag user_badge.badge.badge_image, 
                  alt: user_badge.badge.name, style:"width:80px;",
                  class: "badge-thumb-image" if user_badge.badge.badge_image.attached? %>
                <span class="badge-tooltip">
                  <%= user_badge.badge.name %>: <%= user_badge.badge.description %>
                </span>
              </div>
            <% end %>
            <% if @user.user_badges.count > 5 %>
            <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                 style="width: 80px; height: 80px; border-radius: 50%; border: 2px dashed #dee2e6;">
              <span style="font-size: 0.8rem;">+<%= @user.user_badges.count - 5 %></span>
            </div>
            <% end %>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong><%= @user.user_badges.count %></strong> total badges
          </p>
          <small class="text-muted">Latest earned: Quiz Master</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Study Group Section -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-people-fill text-primary me-2"></i>
        My Study Group
      </h4>
      <a href="#" class="btn btn-outline-primary btn-sm">Group Details</a>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <h5 class="text-primary mb-2">Mathematics Masters</h5>
          <small class="text-muted">Created 3 weeks ago</small>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <!-- Group Member 1 -->
            <div class="text-center">
              <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 2 -->
            <div class="text-center">
              <div class="avatar-circle bg-success text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 3 -->
            <div class="text-center">
              <div class="avatar-circle bg-info text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 4 -->
            <div class="text-center">
              <div class="avatar-circle bg-warning text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 5 -->
            <div class="text-center">
              <div class="avatar-circle bg-danger text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 6 -->
            <div class="text-center">
              <div class="avatar-circle bg-secondary text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                   style="width: 40px; height: 40px; border-radius: 50%; border: 2px dashed #dee2e6;">
                <span style="font-size: 0.8rem;">+247</span>
              </div>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong>6</strong> members
          </p>
          <small class="text-muted">Next quiz: Tomorrow 3PM</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Institution Section -->
  <% if !current_user.institution.nil? %>
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-building me-2"></i>
        My Institution
      </h4>
      <%= link_to "View Institution", institution_path(@user.institution), class:"btn btn-outline-primary btn-sm" %>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <div class="d-flex align-items-center mb-3">
            <%= image_tag @user.institution.institution_logo, 
              alt: @user.institution.name,
              class: "institution-logo-thumb  p-2 mx-2" if @user.institution.institution_logo.attached? %>
            <div>
                <h5 class="mb-2"><%= @user.institution.name %></h5>
            </div>
          </div>
          <small class="text-muted">Rank #3 on VerdGem Quiz</small>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <% @user.institution.users.where(role: :student).limit(5).each do |student| %>
              <%= link_to user_path(student) do %>
                <div class="text-center text-white">
                  <div class="avatar-circle mx-auto" style="background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);">
                      <%= student.initials %>
                  </div>
                  <small class="d-block mt-2 text-black"><%= student.name %></small>
                </div>
              <% end %>
            <% end %>
            <!-- More indicator -->
            <div class="text-center">
              <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                   style="width: 60px; height: 60px; border-radius: 50%; border: 2px dashed #dee2e6;">
                <span style="font-size: 0.8rem;">+<%= @user.institution.users.where(role: :student).count - 5 %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong><%= @user.institution.total_students %></strong> total students
          </p>
          <small class="text-muted">Your rank: #<%= Institution.institution_rank_for_student(@user) %></small>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="d-flex flex-column flex-md-row justify-content-between gap-2 gap-md-0 my-4">
    <a href="#" class="btn btn-outline-secondary">Back to Dashboard</a>
    <div class="d-flex gap-2">
      <a href="#" class="btn btn-success">Add Friends</a>
      <a href="#" class="btn btn-primary">Join Study Group</a>
    </div>
  </div>
</div>

<style>

.card {
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.card:hover {
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

@media (max-width: 768px) {
  .d-flex.gap-3 {
    justify-content: center;
  }
  
  .d-flex.gap-2 {
    justify-content: center;
  }
}
</style>