<div class="container px-4" id="social-dashboard">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="display-6 fw-bold">Social Dashboard</h2>
  </div>
  
  <!-- Combined Following & Followers Card -->
  <div class="card hover-card border-0 shadow-sm mb-4">
    <div class="card-body">
      <!-- Following Section -->
      <div class="row row-deck row-cards">
        <div class="col-sm-6 col-lg-3">
          <div class="card border-0">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="subheader">Following</div>
                <div class="ms-auto lh-1">
                </div>
              </div>
              <div class="d-flex align-items-baseline">
                <div class="h1 mb-3 me-2"><%= @user.following_count %></div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-sm-6 col-lg-3">
          <div class="card border-0">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="subheader">Followers</div>
                <div class="ms-auto lh-1">
                </div>
              </div>
              <div class="d-flex align-items-baseline">
                <div class="h1 mb-3 me-2"><%= @user.followers_count %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
      <div class="mb-4">
        <% if @user.following.any? %>
          <div class="d-flex flex-wrap gap-3 mb-2">
            <% @user.following.limit(4).each_with_index do |followed_user, index| %>
              <div class="text-center">
                <%= link_to user_path(followed_user), class: "text-decoration-none" do %>
                  <div class="avatar-circle <%= avatar_color_class(index) %> text-white d-flex align-items-center justify-content-center mb-2" 
                       style="width: 50px; height: 50px; border-radius: 50%; font-size: 0.8rem;">
                    <%= followed_user.initials %>
                  </div>
                  <small class="text-muted d-block" style="font-size: 0.75rem;">
                    <%= followed_user.first_name %> <%= followed_user.last_name.first %>.
                  </small>
                <% end %>
              </div>
            <% end %>
            
            <% if @user.following_count > 4 %>
              <%= link_to following_user_path(@user), class: "text-decoration-none" do %>
                <div class="text-center">
                  <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center mb-2" 
                       style="width: 50px; height: 50px; border-radius: 50%; border: 2px dashed #dee2e6; font-size: 0.7rem;">
                    +<%= @user.following_count - 4 %>
                  </div>
                  <small class="text-muted d-block" style="font-size: 0.75rem;">more</small>
                </div>
              <% end %>
            <% end %>
          </div>
          <small class="text-muted">
            <strong><%= @user.following_count %></strong> following
            <% if @user.following.any? %>
              â€¢ Recent: <%= time_ago_in_words(@user.active_follows.recent.first.created_at) %> ago
            <% end %>
          </small>
        <% else %>
          <div class="text-center py-3">
            <i class="bi bi-person-plus text-muted" style="font-size: 2rem;"></i>
            <p class="text-muted small mb-2 mt-2">Not following anyone yet</p>
            <a href="#" class="btn btn-primary btn-sm">
              <i class="bi bi-search me-1"></i>Find Users
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Study Group Section -->
  <div class="card hover-card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-people-fill text-primary me-2"></i>
        My Study Group
      </h4>
      <a href="#" class="btn btn-outline-primary btn-sm">Group Details</a>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <h5 class="text-primary mb-2">Mathematics Masters</h5>
          <small class="text-muted">Created 3 weeks ago</small>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <!-- Group Member 1 -->
            <div class="text-center">
              <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 2 -->
            <div class="text-center">
              <div class="avatar-circle bg-success text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 3 -->
            <div class="text-center">
              <div class="avatar-circle bg-info text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 4 -->
            <div class="text-center">
              <div class="avatar-circle bg-warning text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 5 -->
            <div class="text-center">
              <div class="avatar-circle bg-danger text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <!-- Group Member 6 -->
            <div class="text-center">
              <div class="avatar-circle bg-secondary text-white d-flex align-items-center justify-content-center" 
                   style="width: 45px; height: 45px; border-radius: 50%;">
                <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
              </div>
            </div>
            <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                   style="width: 40px; height: 40px; border-radius: 50%; border: 2px dashed #dee2e6;">
                <span style="font-size: 0.8rem;">+247</span>
              </div>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong>6</strong> members
          </p>
          <small class="text-muted">Next quiz: Tomorrow 3PM</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Institution Section -->
  <% if !current_user.institution.nil? %>
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 text-body-emphasis">
        <i class="bi bi-building me-2"></i>
        My Institution
      </h4>
      <%= link_to "View Institution", institution_path(@user.institution), class:"btn btn-outline-primary btn-sm" %>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <div class="d-flex align-items-center mb-3">
            <%= image_tag @user.institution.institution_logo, 
              alt: @user.institution.name,
              class: "institution-logo-thumb  p-2 mx-2" if @user.institution.institution_logo.attached? %>
            <div>
                <h5 class="mb-2"><%= @user.institution.name %></h5>
            </div>
          </div>
          <small class="text-muted">Rank #3 on VerdGem Quiz</small>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
          <div class="d-flex flex-wrap gap-2">
            <% @user.institution.users.where(role: :student).limit(5).each do |student| %>
              <%= link_to user_path(student) do %>
                <div class="text-center text-white">
                  <div class="avatar-circle mx-auto" style="background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);">
                      <%= student.initials %>
                  </div>
                  <small class="d-block mt-2 text-black"><%= student.name %></small>
                </div>
              <% end %>
            <% end %>
            <!-- More indicator -->
            <div class="text-center">
              <div class="avatar-circle bg-light text-muted d-flex align-items-center justify-content-center" 
                   style="width: 60px; height: 60px; border-radius: 50%; border: 2px dashed #dee2e6;">
                <span style="font-size: 0.8rem;">+<%= @user.institution.users.where(role: :student).count - 5 %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-3 text-md-end mt-3 mt-md-0">
          <p class="text-muted mb-1">
            <strong><%= @user.institution.total_students %></strong> total students
          </p>
          <small class="text-muted">Your rank: #<%= Institution.institution_rank_for_student(@user) %></small>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="d-flex flex-column flex-md-row justify-content-between gap-2 gap-md-0 my-4">
    <a href="#" class="btn btn-outline-secondary">Back to Dashboard</a>
    <div class="d-flex gap-2">
      <a href="#" class="btn btn-success">Add Friends</a>
      <a href="#" class="btn btn-primary">Join Study Group</a>
    </div>
  </div>
</div>

<style>

.hover-card {
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.hover-card:hover {
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

@media (max-width: 768px) {
  .d-flex.gap-3 {
    justify-content: center;
  }
  
  .d-flex.gap-2 {
    justify-content: center;
  }
}
</style>