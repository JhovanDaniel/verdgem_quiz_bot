<div class="container mt-4">
  <div class="card border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-white border-0">
      <h2 class="mb-0">All Users</h2>
      <div>
        <%= link_to "New User", admin_new_user_path, class: "btn btn-primary btn-sm" %>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Joined</th>
              <th>Quiz Attempts</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= "#{user.first_name} #{user.last_name}".strip %>
                  <% if user == current_user %>
                    <span class="badge bg-dark ms-1">You</span>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                    <%= user.role.humanize %>
                </td>
                <td><%= user.created_at.strftime('%b %d, %Y') %></td>
                <td><%= user.question_attempts.count %></td>
                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to "View", user_path(user), class: "btn btn-outline-primary" %>
                    <%= link_to "Edit", admin_edit_user_path(user), class: "btn btn-outline-secondary" %>
                    <% unless user == current_user %>
                      <%= link_to "Delete", user_path(user), 
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user? This action cannot be undone." }, 
                          class: "btn btn-outline-danger" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @users.empty? %>
        <div class="alert alert-info">
          No users found.
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <h3>User Statistics</h3>
    <div class="row">
      <div class="col-md-3">
        <div class="card bg-light">
          <div class="card-body text-center">
            <h3><%= @users.count %></h3>
            <p class="mb-0">Total Users</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-light">
          <div class="card-body text-center">
            <h3><%= @users.where(role: 'admin').count %></h3>
            <p class="mb-0">Administrators</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-light">
          <div class="card-body text-center">
            <h3><%= @users.where(role: 'teacher').count %></h3>
            <p class="mb-0">Teachers</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-light">
          <div class="card-body text-center">
            <h3><%= @users.where(role: 'student').count %></h3>
            <p class="mb-0">Students</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>