<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="pb-2 border-bottom"><%= "#{@current_month.strftime("%B %Y")} Leaderboard" %> </h2>
    
    <div class="btn-group">
    </div>
  </div>
  
  
  <div class="row">
    <!-- Total Points Leaderboard -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Total Points Leaders</h3>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Rank</th>
                  <th>Student</th>
                  <th>Points</th>
                  <th>Questions</th>
                </tr>
              </thead>
              <tbody>
                <% @top_by_score.each_with_index do |user, index| %>
                  <tr class="<%= 'table-primary' if user == current_user %>">
                    <td><%= index + 1 %></td>
                    <td>
                      <% if !current_user.nickname.blank? %>
                        <%= user.nickname %>
                      <% else %>
                        <%= user.first_name %> <%= user.last_name&.first %>
                      <% end %>
                      
                      <% if user == current_user %>
                        <span class="badge bg-info">You</span>
                      <% end %>
                    </td>
                    <td><%= user.total_points %></td>
                    <td><%= user.completed_questions_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <% if @score_rank && @score_rank > 10 %>
            <div class="alert alert-info mt-3">
              Your rank: <strong>#<%= @score_rank %></strong> with <%= current_user.total_score %> points
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Percentage Leaders -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Highest Accuracy</h3>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Rank</th>
                  <th>Student</th>
                  <th>Accuracy</th>
                  <th>Questions</th>
                </tr>
              </thead>
              <tbody>
                <% @top_by_percentage.each_with_index do |user, index| %>
                  <tr class="<%= 'table-success' if user == current_user %>">
                    <td><%= index + 1 %></td>
                    <td>
                      <% if !current_user.nickname.blank? %>
                        <%= user.nickname %>
                      <% else %>
                        <%= user.first_name %> <%= user.last_name&.first %>
                      <% end %>
                      
                      <% if user == current_user %>
                        <span class="badge bg-info">You</span>
                      <% end %>
                    </td>
                    <td><%= user.score_percentage %>%</td>
                    <td><%= user.completed_questions_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <% if @percentage_rank && @percentage_rank > 10 %>
            <div class="alert alert-info mt-3">
              Your rank: <strong>#<%= @percentage_rank %></strong> with <%= current_user.score_percentage %>% accuracy
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <% if current_user %>
    <div class="card mb-4">
      <div class="card-header bg-light">
        <h3 class="mb-0">Your Statistics for <%= @current_month.strftime("%B %Y") %></h3>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3">
            <div class="card bg-light mb-3">
              <div class="card-body">
                <h2><%= current_user.total_score(@start_date, @end_date) %></h2>
                <p class="mb-0">Total Points</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-light mb-3">
              <div class="card-body">
                <h2><%= current_user.score_percentage(@start_date, @end_date) %>%</h2>
                <p class="mb-0">Accuracy</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-light mb-3">
              <div class="card-body">
                <h2><%= current_user.completed_questions_count(@start_date, @end_date) %></h2>
                <p class="mb-0">Questions Answered</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-light mb-3">
              <div class="card-body">
                <h2><%= current_user.quiz_sessions.where(completed_at: @start_date..@end_date).count %></h2>
                <p class="mb-0">Quizzes Completed</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <p class="text-muted text-center">
    Only students with at least 10 completed questions are ranked on the leaderboard.
  </p>
  
  <div class="mt-4">
    <% if current_user %>
      <%= link_to "Back to Dashboard", authenticated_root_path, class: "btn btn-outline-primary" %>
    <% else %>
      <%= link_to "Back to Home", authenticated_root_path, class: "btn btn-outline-primary" %>
    <% end %>
    
    <% if current_user %>
      <%= link_to "Start a New Quiz", quiz_select_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>