<nav class="navbar navbar-expand-lg border-bottom">
  <div class="container-xl">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "Logo-full.png", alt: "VerdGem logo", class: "img-fluid", style: "max-width: 150px; height: auto;" %>
    <% end %>
    
    <!-- Fixed toggle button - Bootstrap 5 syntax -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
 
    <!-- Main Navigation -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to authenticated_root_path, class:"nav-link px-2" do %>
            <i class="bi bi-house"></i>
            <span>Home</span>
          <% end %>
        </li>
        
        <li class="nav-item">
          <%= link_to subjects_path, class:"nav-link px-2" do %>
            <i class="bi bi-journal"></i>
            <span>Subjects</span>
          <% end %>
        </li>
        
        <% if current_user %>
          <li class="nav-item">
            <%= link_to quiz_sessions_path, class:"nav-link px-2" do %>
              <i class="bi bi-pencil"></i>
              <span>Quiz Sessions</span>
            <% end %>
          </li>
        <% end %>
          
        <li class="nav-item">
          <%= link_to leaderboard_path, class:"nav-link px-2" do %>
            <i class="bi bi-trophy"></i>
            <span>Leaderboard</span>
          <% end %>
        </li>
          
        <% if current_user %>
          <li class="nav-item">
            <%= link_to reports_path, class:"nav-link px-2" do %>
              <i class="bi bi-file-earmark-bar-graph"></i>
              <span>Reports</span>
            <% end %>
          </li>
          
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to users_path, class:"nav-link px-2" do %>
                <i class="bi bi-person-gear"></i>
                <span>Users</span>
              <% end %>
            </li>
          
            <li class="nav-item">
              <%= link_to "#", class:"nav-link px-2" do %>
                <i class="bi bi-gear"></i>
                <span>Configuration</span>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    
    <!-- User Menu / Auth Links -->
    <% if current_user %>
      <div class="navbar-nav d-flex align-items-center ms-auto">
        <div class="nav-item dropdown">
          <a href="#" class="nav-link d-flex align-items-center text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">
            <span class="avatar me-2"><%= current_user.initials %></span>      
            <div class="d-none d-lg-block ps-2">
              <div><%= current_user.name %></div>
              <div class="mt-1 small text-muted"><%= current_user.role.titleize %></div>
            </div>
          </a>
          <div class="dropdown-menu dropdown-menu-end">
            <%= link_to 'My account', user_path(current_user), class: 'dropdown-item' %>
            <%= link_to 'Log out', destroy_user_session_path, class: 'dropdown-item', data: { turbo_method: :delete } %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="navbar-nav d-flex align-items-center gap-3 ms-auto">
        <%= link_to new_user_session_path, class: "nav-link p-0" do %>
          <div class="d-flex align-items-center">
            <i class="bi bi-person"></i>   
            <span class="ms-2">Login</span>
          </div>
        <% end %>
        <%= link_to new_user_registration_path, class: "btn btn-sm btn-primary" do %>
          Sign up
        <% end %>
      </div>
    <% end %>
  </div>
</nav>